<!DOCTYPE html>
<html lang="es">
    <%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/header.ejs') %>
    <main class="container">
        <h3 class="text-center">Todos nuestros autos</h3>

        <div class="container d-flex flex-wrap justify-content-center">
            <% autos.forEach( auto => { %>
                <div class="card m-2 text-white bg-dark" style="width: 16rem;">
                    <img src="/images/<%- auto.imagen %>" class="card-img-top" alt="...">
                    <div class="card-body">
                      <h5 class="card-title"><%= auto.marca.toUpperCase() %></h5>
                      <p class="card-text">Modelo: <%= auto.modelo %></p>
                      <p class="card-text">AÃ±o: <%= auto.anio %></p>
                      <p class="card-text">Color: <%= auto.color %></p>
                      <p class="card-text">Sucursal: <%= auto.sucursal %></p>
                      <a href="/autos/detalle/<%- auto.id %>" class="btn btn-primary">Detalle</a>
                    </div>
                </div>
            <% }) %>
        </div>

    </main>
    <%- include('./partials/scripts.ejs') %>
    <%- include('./partials/footer.ejs') %>
</body>
</html>